# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (if you plan to add a database)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=simple_react_project

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration (if needed)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=uploads

# API Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
REACT_APP_API_URL=https://simple-react-api.netlify.app